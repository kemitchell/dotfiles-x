#!/bin/bash
cat <<HELP
xwininfo to find window id
sleep 10 ; beep ; recordmydesktop
  -o file.ogv
  -x 0
  -y 0
  --width X
  --height Y
  # Laptop is 1600 x 900

  --channels 1
  --device hw:1,0 // for Samson
  OR
  --no-sound

  --windowid <id>
  --full-shots
  --fps 15
  --stop-shortcut [Control-Alt-s]

  --delay 10
HELP
